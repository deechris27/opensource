{
  "name": "mytidbit",
  "version": "1.1.0",
  "description": "Baby name generator",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build:umd:min": "webpack --mode production --output-filename index.umd.js",
    "test": "cross-env NODE_ENV=test nyc --reporter=html mocha --require @babel/register",
    "test:watch": "mocha --watch",
    "validate": "npm-run-all --parallel test build",
    "coverage-report": "cat ./coverage | codecov"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100
  },
  "files": [
    "dist"
  ],
  "author": "Deepak <dd43030@gmail.com> (http://tidbit.c.la/)",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@babel/cli": "7.10.0",
    "@babel/core": "7.10.0",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-runtime": "7.10.0",
    "@babel/preset-env": "*",
    "@babel/runtime": "7.10.0",
    "babel-loader": "8.1.0",
    "babel-plugin-istanbul": "6.0.0",
    "json-loader": "0.5.7",
    "unique-random-array": "2.0.0",
    "webpack": "4.43.0"
  },
  "instrument": false,
  "sourceMap": false,
  "include": [
    "src"
  ],
  "devDependencies": {
    "@babel/register": "7.9.0",
    "chai": "4.2.0",
    "codecov": "3.7.0",
    "cross-env": "7.0.2",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "ghooks": "2.0.4",
    "mocha": "7.2.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.1",
    "rimraf": "3.0.2",
    "webpack-cli": "3.3.11"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ],
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  }
}
